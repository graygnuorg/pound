AT_SETUP([BasicAuth])
AT_KEYWORDS([cond dyncond basicauth BasicAuth dynbauth])
AT_DATA([htpass],
[gray:guessMe
])
PT_CHECK([WatcherTTL 1
ListenHTTP
	Service "auth"
		Not BasicAuth "htpass"
		Rewrite response
			SetHeader "WWW-Authenticate: Basic realm=\"Restricted access\""
		End
		Error 401
	End
	Service
		Backend
			Address
			Port
		End
	End
End	
],	
[GET /echo/foo
Host: example.org
end

401
WWW-Authenticate: Basic realm="Restricted access"
end

GET /echo/foo
Host: example.org
Authorization: Basic Z3JheTpndWVzc01l
end

200
end

run echo gray:anotherPass > htpass
logtail "file reloaded"
end

GET /echo/foo
Host: example.org
Authorization: Basic Z3JheTphbm90aGVyUGFzcw==
end

200
end
])
AT_CLEANUP

