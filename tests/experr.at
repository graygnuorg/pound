AT_SETUP([Expansion error handling])
AT_KEYWORDS([experr rewrite reqacc accessor])

PT_CHECK([ListenHTTP
	Service
		SetPath "/echo%@<:@url"
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/foo
end

500
end
])

AT_CHECK([fgrep -q 'pound: path "/echo%@<:@url": unclosed %@<:@ at offset 5' pound.log])

PT_CHECK([ListenHTTP
	Service
		SetPath "/echo$0"
		Backend
			Address
			Port
		End
	End
End
],
[GET /foo
end

500
end
])

AT_CHECK([fgrep -q 'pound: path "/echo$0" refers to non-existing group $0' pound.log])

PT_CHECK([ListenHTTP
	Service
		SetPath "/echo${11bar"
		Backend
			Address
			Port
		End
	End
End
],
[GET /foo
end

500
end
])

AT_CHECK([fgrep -q 'pound: path "/echo${11bar": missing closing brace in reference started in position 6' pound.log])

PT_CHECK([ListenHTTP
	Service
		SetPath "/echo%{11bar"
		Backend
			Address
			Port
		End
	End
End
],
[GET /foo
end

500
end
])

AT_CHECK([fgrep -q 'pound: path "/echo%{11bar": missing closing brace in reference started in position 6' pound.log])

PT_CHECK([ListenHTTP
	Service
		SetPath "/echo%qbar"
		Backend
			Address
			Port
		End
	End
End
],
[GET /foo
end

500
end
])

AT_CHECK([fgrep -q 'pound: path "/echo%qbar": unescaped % character in position 6' pound.log])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			Header "X-Foo: (.*)"
			Header "X-Bar: (.*)"
			SetPath ["/echo/$1(1"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /foo
X-Foo: bar
X-Bar: quux
end

500
end
])

AT_CHECK([fgrep -q 'pound: path ["/echo/$1(1"]: missing closing parenthesis in reference started in position 7' pound.log])

PT_CHECK([ListenHTTP
	Service
		Rewrite
			Header "X-Foo: (.*)"
			Header "X-Bar: (.*)"
			SetPath ["/echo/${1(1}"]
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /foo
X-Foo: bar
X-Bar: quux
end

500
end
])

AT_CHECK([fgrep -q 'pound: path ["/echo/${1(1}"]: missing closing parenthesis in reference started in position 7' pound.log])

AT_CLEANUP
