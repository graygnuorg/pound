AT_SETUP([ACL])
AT_KEYWORDS([cond acl])
m4_pushdef([HARNESS_OPTIONS],[--source-address=127.0.0.2 dnl
 --source-address=127.0.0.3 dnl
 --source-address=127.0.0.9 --source-address=127.0.0.17])
PT_CHECK([ListenHTTP
	Service
		ACL
			"127.0.0.1"
			"127.0.0.2"
			"127.0.0.8/29"
		End
		Backend
			Address
			Port
		End
	End
	Service
		Error 404
	End
End],
[GET /echo/foo
Host: example.org
end

200
end

source 127.0.0.2

GET /echo/foo
Host: example.org
end

200
end

source 127.0.0.3

GET /echo/foo
Host: example.org
end

404
end

source 127.0.0.9

GET /echo/foo
Host: example.org
end

200
end

source 127.0.0.17

GET /echo/foo
Host: example.org
end

404
end

])
m4_popdef([HARNESS_OPTIONS])
AT_CLEANUP
