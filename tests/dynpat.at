AT_SETUP([Pattern files])
AT_KEYWORDS([cond dyncond pattern dynpat])

AT_DATA([input],
[GET /echo/foo
X-Host: example.org
end

404
end

GET /echo/foo
X-Host: localhost
end

404
end

# Make sure file mtime is at least one second past its initial value
#:mtime sleep 1
run echo example.org > hostfile
logtail "file reloaded"
end

GET /echo/foo
X-Host: example.org
end

200
end

GET /echo/foo
X-Host: localhost
end

404
end

run echo localhost >> hostfile
logtail "file reloaded"
end

GET /echo/foo
X-Host: example.org
end

200
end

GET /echo/foo
X-Host: localhost
end

200
end

run sed -i -e 1d hostfile
logtail "file reloaded"
end

GET /echo/foo
X-Host: example.org
end

404
end

GET /echo/foo
X-Host: localhost
end

200
end
])

AT_CHECK([if test "$EVMON_AVAILABLE" != "1"; then
  sed -i -e 's/^#:mtime //' input
fi
])

PT_CHECK([WatcherTTL 1
ListenHTTP
	Service
		Header "X-Host" -filewatch "hostfile"
		Backend
			Address
			Port
		End
	End
	Service
		Error 404
	End
End],
[input])

AT_CLEANUP
