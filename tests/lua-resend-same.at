AT_SETUP([Resend to the same backend])
AT_KEYWORDS([cond lua lua-resend lua-resend-same])

AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])
AT_DATA([auth.lua],
[function bauth()
  if http.resp.code == 401 then
    pound.log(pound.ERR, "Inject")
    http.req.headers.authorization = "Basic Z3JheTpndWVzc01l"
    http.resend = true
  end
end
])
AT_DATA([userlist],
[gray:guessMe
])

PT_CHECK([Lua
	Load "auth.lua"
End
ListenHTTP
	Service
		Rewrite response
			LuaModify "bauth"
		End
		Backend
		End
	End
End
],
[GET /bauth/
end

200
end
])

AT_CLEANUP
