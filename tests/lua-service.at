AT_SETUP([service field])
AT_KEYWORDS([cond lua lua-service])

AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])

AT_DATA([srv.lua],
[[function reveal_service()
  http.resp.headers['x-service-name'] = http.service.name
  http.resp.headers['x-service-locus'] = http.service.locus
  http.resp.headers['x-service-string'] = tostring(http.service)
  for k,v in pairs(http.service) do
    http.resp.headers['x-service-pairs-' .. k] = v
  end
end
]])

PT_CHECK([Lua
	Load "srv.lua"
End
Service "fallback"
	Rewrite response
		LuaModify "reveal_service"
	End
	Backend
		Address
		Port
	End
End
ListenHTTP
	Service "first"
		Host "foo.bar"
		Rewrite response
			LuaModify "reveal_service"
		End
		Backend
			Address
			Port
		End
	End
End
],
[GET /echo/test1
Host: foo.bar
end

200
x-service-name: first
x-service-locus: pound.cfg:22.17-33.11
x-service-string: service first @ pound.cfg:22.17-33.11
x-service-pairs-name: first
x-service-pairs-locus: pound.cfg:22.17-33.11
end

GET /echo/test2
end

200
x-service-name: /fallback
x-service-locus: pound.cfg:9.9-18.3
x-service-string: service /fallback @ pound.cfg:9.9-18.3
x-service-pairs-name: /fallback
x-service-pairs-locus: pound.cfg:9.9-18.3
end

])

AT_CLEANUP
