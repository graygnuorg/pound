AT_SETUP([Include globbing])
AT_KEYWORDS([include inclglob])

AT_CHECK([mkdir conf.d
mkdir conf.d/subdir
mkdir conf.d/subdir.conf.pha
])

AT_DATA([conf.d/svc1.conf],
[Service
	Host "example.org"
	Backend
	End
End
])

AT_DATA([conf.d/svc2.conf],
[Service
	Host "example.com"
	Backend
	End
End
])

AT_DATA([conf.d/svc3.conf],
[Include "conf.d/subdir/*.conf"
])

AT_DATA([conf.d/noconf],
[whatever
])

AT_DATA([conf.d/subdir/0.conf],
[Service
	Host "foo.com"
	Backend
	End
End
])

AT_DATA([conf.d/subdir/1.conf],
[Service
	Host "bar.com"
	Backend
	End
End
])

PT_CHECK(
[ListenHTTP
Include "conf.d/*.conf"
End
],
[GET /echo/foo
Host: example.org
end

200
x-backend-number: 0
end

GET /echo/foo
Host: example.com
end

200
x-backend-number: 1
end

GET /echo/foo
Host: foo.com
end

200
x-backend-number: 2
end

GET /echo/foo
Host: bar.com
end

200
x-backend-number: 3
end
])

AT_CLEANUP

