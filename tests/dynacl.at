AT_SETUP([Dynamic ACL])
AT_KEYWORDS([cond acl dynacl])
m4_pushdef([HARNESS_OPTIONS],[--source-address=127.0.0.2 dnl
 --source-address=127.0.0.3 dnl
 --source-address=127.0.0.9 --source-address=127.0.0.17])

AT_DATA([aclfile],
[127.0.0.1
])

AT_DATA([aclfile.full],
[127.0.0.1
127.0.0.2
127.0.0.8/29
])

AT_DATA([input],
[GET /echo/foo
Host: example.org
end

200
end

source 127.0.0.2

GET /echo/foo
Host: example.org
end

404
end

run echo 127.0.0.2 >> aclfile
end

#:mtime sleep 2

GET /echo/foo
Host: example.org
end

200
end

run rm aclfile
end

#:mtime sleep 2

GET /echo/foo
Host: example.org
end

404
end

run cp aclfile.full aclfile
end

#:mtime sleep 2

GET /echo/foo
Host: example.org
end

200
end

source 127.0.0.3

GET /echo/foo
Host: example.org
end

404
end

source 127.0.0.9

GET /echo/foo
Host: example.org
end

200
end
])

AT_CHECK([if test "$INOTIFY_AVAILABLE" != "1"; then
  sed -i -e 's/^#:mtime //' input
fi
])

PT_CHECK([WatcherTTL 1
ListenHTTP
	Service
		ACL -filewatch "aclfile"
		Backend
			Address
			Port
		End
	End
	Service
		Error 404
	End
End],
[input])

m4_popdef([HARNESS_OPTIONS])
AT_CLEANUP
