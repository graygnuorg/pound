AT_SETUP([Resend to another backend])
AT_KEYWORDS([cond lua lua-resend lua-resend-be])

AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])
AT_DATA([resend.lua],
[[function resend()
   if http.resp.code == 421 then
      http.req.headers['x-pound-force-status'] = nil
      http.balancer = 65535
   end
end
]])

PT_CHECK([Lua
	Load "resend.lua"
End
ListenHTTP
	Service
		Rewrite response
			LuaModify "resend"
		End
		Backend
		End
		Emergency
		End
	End
End		
],
[GET /echo/file
x-pound-force-status: 421
end

200
x-backend-number: 1
end
])

AT_CLEANUP
