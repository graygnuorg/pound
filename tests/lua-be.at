AT_SETUP([Lua backends])
AT_KEYWORDS([cond lua lua-be])

AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])

AT_DATA([backend.lua],
[[function be_simple(code, body, reason)
   if code == "0" then
      http.resp.code = 200
      http.resp.headers['Content-Type'] = "text/plain"
      http.resp.headers['X-bar'] = "foo"
   elseif code == "1" then
      http.resp.code = 200
      http.resp.headers = {
	 ['Content-Type'] = "text/plain",
	 ['X-bar'] = "foo",
	 ['X-foo'] = "bar"
      }
   else
      http.resp.code = code
   end
   http.resp.body = body
   http.resp.reason = reason
end
]])

PT_CHECK([Lua
	Load "backend.lua"
End
ListenHTTP
	Service
		LuaBackend "be_simple" "200" "Response text\nGoes here\n"
	End
End
],
[GET /echo/foo
end

200

Response text
Goes here
end
])

PT_CHECK([[Lua
	Load "backend.lua"
End
ListenHTTP
	Service
		LuaBackend "be_simple" "%[header X-Code]" "Response text\nGoes here\n"
	End
End
]],
[GET /echo/foo
X-Code: 0
end

200
Content-Type: text/plain
X-bar: foo

Response text
Goes here
end

GET /echo/foo
X-Code: 1
end

200
Content-Type: text/plain
X-bar: foo
X-foo: bar

Response text
Goes here
end
])

AT_CLEANUP
