AT_SETUP([Lua load])
AT_KEYWORDS([cond lua lua-load])

AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])

AT_DATA([gtest.lua],
[function gtest()
    return pound.loadctx == nil
end
pound.log(pound.DEBUG, "Global Context " .. tostring(pound.loadctx))
])

AT_DATA([xtest.lua],
[function xtest()
    return pound.loadctx == nil 
end
pound.log(pound.DEBUG, "Context " .. tostring(pound.loadctx))
])

PT_CHECK([
WorkerMinCount 2
WorkerMaxCount 2
Lua
	Load "xtest.lua"
	LoadGlobal "gtest.lua"
End
ListenHTTP
	Service
		Path "/echo/foo"
		Lua "xtest"
		Backend
		End
	End
	Service
		Path "/echo/bar"
		Lua "gtest"
		Backend
		End
	End
End
],
[GET /echo/foo
end

200
x-backend-number: 0
end

GET /echo/bar
end

200
x-backend-number: 1
end
])

AT_CHECK([grep Context pound.log],
[0],
[pound: Global Context 0
pound: Context 1
pound: Context 2
])

AT_CLEANUP
