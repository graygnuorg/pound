AT_SETUP([Lua http module])
AT_KEYWORDS([cond lua lua-http])

AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])

AT_DATA([xhost.lua],
[[function chkhost(a)
   return a == http.req.headers['host']:match("([^:]+):[0-9]+")
end
]])

PT_CHECK([Lua
	Load "xhost.lua"
End
ListenHTTP
	Service
		LuaMatch "chkhost" "example.com"
		Backend
		End
	End
	Service
		LuaMatch "chkhost" "foo.bar"
		Backend
		End
	End
End
],
[GET /echo/foo
Host: example.com
end

200
x-backend-number: 0
end

GET /echo/foo
Host: foo.bar
end

200
x-backend-number: 1
end

GET /echo/foo
Host: foo.bar.baz
end

503
end
])

AT_CLEANUP
