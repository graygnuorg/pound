AT_SETUP([Resend loop])
AT_KEYWORDS([cond lua lua-resend lua-resend-loop])

AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])
AT_DATA([resend.lua],
[function resend()
  http.resend = true
end
])

PT_CHECK([Lua
	Load "resend.lua"
End
ListenHTTP
	Service
		Rewrite response
			LuaModify "resend"
		End
		Backend
		End
	End
End
],
[GET /echo
end

500
end
])

AT_CHECK([grep -q 'e500:.*refusing to do more than' pound.log])

AT_CLEANUP
