AT_SETUP([Resend and reset service])
AT_KEYWORDS([cond lua lua-resend lua-resend-nulsvc])

AT_SKIP_IF([test "$LUA_AVAILABLE" != 1])
AT_DATA([resend.lua],
[function resend()
  if http.resp.code == 401 then
    http.req.path = '/echo/foo/bar'
    http.service.name = nil
  end
end
])

PT_CHECK([Lua
	Load "resend.lua"
End
ListenHTTP
	Service "echo"
		Path -beg "/echo/"
		Backend
		End
	End
	Service "auth"
		Rewrite response
			LuaModify "resend"
		End
		Backend
		End
	End
End
],
[GET /bauth/foo/bar
end

200
x-orig-uri: /echo/foo/bar
end
])

AT_CLEANUP
